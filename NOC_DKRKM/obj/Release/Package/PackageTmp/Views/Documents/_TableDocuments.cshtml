
@model IEnumerable<NOC_DKRKM.Models.Document>

@{
    Layout = null;
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Topic.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kind.KindName)
        </td>
        <td>
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" title="Редагувати" onclick="location.href='@Url.Action("Edit", new { id = item.DocumentID })'" class="btn btn-default">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button type="button" title="Деталі" onclick="location.href='@Url.Action("Details", new { id = item.DocumentID })'" class="btn btn-default">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                </button>
                <button type="button" title="Видалити" onclick="location.href='@Url.Action("Delete", new { id = item.DocumentID })'" class="btn btn-default">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </div>
        </td>
    </tr>
}