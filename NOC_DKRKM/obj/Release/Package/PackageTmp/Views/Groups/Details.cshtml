@model NOC_DKRKM.ViewModels.GroupsResultsData

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>



<table class="table">
    <tr>
        <th>
        </th>
        @foreach (var item in Model.Topics)
        {
            <th>
                @item.Name
            </th>
        }
    </tr>

    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @item.sname @item.name @item.lname
            </td>
                @if (item.TestResults.Count() != 0)
                {
            <td>
                    @item.TestResults.Last().Mark.ToString();
            </td>
                }
                else
                {
                    <td></td>
                }


        </tr>
    }

</table>




