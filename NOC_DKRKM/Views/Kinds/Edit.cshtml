@model NOC_DKRKM.Models.Kind

@{
    ViewBag.Title = "Редагування виду матеріалу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагування виду матеріалу</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KindId)

        <div class="form-group">
            @Html.LabelFor(model => model.KindName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KindName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KindName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутися до списку видів матеріалів", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
